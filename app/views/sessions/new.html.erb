<div class="container my-5">
    <h1 class="text-dark mb-4">Admin|Login</h1>
    <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>
        <div class="center-block m-auto w-50">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :email, class: "mt-3" %>
            <%= f.email_field :email, class: "form-control" %>

            <%= f.label :password, class: "mt-3" %>
            <%= f.password_field :password, class: "form-control" %>
            
            <%= f.submit "Login", class: "btn btn-block bg-success text-white mt-4" %>
        </div>
    <% end %>
</div>