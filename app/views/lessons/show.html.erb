<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-dark mb-4"><%= @lesson.category.title %></h1>
        <h2 class="text-dark mb-4">Result: <span class="text-warning"><%= @lesson.score %></span> of <%= @lesson.category.words.count %></h2>
    </div>
    <table class="table table-striped border">
        <tbody>
            <tr>
                <th style="width: 30%;">Word</th>
                <th style="width: 30%;">Your answer</th>
                <th style="width: 30%;">Correct answer</th>
                <th style="width: 20%;"></th>
            </tr>
            <% @lesson.answers.each do |answer|%>
                <tr>
                    <td><%= answer.word.content %></td>
                    <td><%= answer.choice.content %></td>
                    <td><%= answer.word.correct_choice.content %></td>
                    <% if answer.choice.is_correct? %>
                        <td><i class="fa-solid fa-check text-success h4"></i></td>
                    <% else %>
                        <td><i class="fas fa-times text-danger h4"></i></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
    <p class="text-center"><%= link_to "Back to Lessons", categories_path, class: "text-decoration-none" %></p>
</div>