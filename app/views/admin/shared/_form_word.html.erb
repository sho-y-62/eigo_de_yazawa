<%= form_with(model: [:admin, @category, @word], local: true) do |f| %>
    <%= render "/shared/error_message", object: @word %>
    <div class="container">
        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :word, class: "form-label" %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :content, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= f.label :choices, class: "form-label" %>
            </div>
            <div class="col-sm-10">
                <%= f.fields_for :choices do |choice| %>
                    <div class="d-flex">
                        <%= choice.text_field :content, class: "form-control mb-3" %>
                        <div class="form-check form-check-inline ml-5">
                            <%= choice.label :is_correct, 'Correct', class: "form-check-label" %>
                            <%= choice.check_box :is_correct, class: "form-check-input ml-2" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <%= f.submit "Save word", class: "btn btn-block btn-success mt-3" %>
        </div>
    </div>
<% end %>
