<div class="container my-5">
    <div class="d-flex justify-content-start align-items-center">
        <h1 class="text-dark mb-4">Lessons<span class="text-secondary">(<%= @categories.count %>)</span></h1>
    </div>

    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-sm-6 mb-4">
                <div class="card border-0 shadow-lg rounded">
                    <div class="card-body p-5">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title"><%= category.title %></h4>
                        </div>
                        <p class="card-text"><span class="font-weight-bolder">[<%= category.words.count %> words]</span><%= category.description %></p>
                        <%= button_to "Learn", lessons_path(category_id: category.id), class: "btn btn-primary w-100 mt-4" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    
</div>